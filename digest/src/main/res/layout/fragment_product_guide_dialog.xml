<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shenke.digest.dialog.ProductGuideDialog">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="skip"
        android:textColor="@drawable/skip_selector"
        android:textSize="18sp" />

    <com.shenke.digest.view.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        app:centered="true"
        app:fillColor="@color/colorAccent"
        app:orientation="horizontal"
        app:pageColor="@color/skip_gray"
        app:radius="6dp"
        app:snap="false"
        app:strokeWidth="0dp" />

    <com.shenke.digest.view.CircularRevealView
        android:id="@+id/revalView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
</FrameLayout>
