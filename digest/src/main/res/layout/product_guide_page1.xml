<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="320dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_sound" />

    <ImageView
        android:id="@+id/infoGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="190dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_infographic" />

    <ImageView
        android:id="@+id/stockChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="240dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_stockchart" />


    <ImageView
        android:id="@+id/mailbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@mipmap/onboarding_1_mainbox" />

    <ImageView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="85dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_video" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="78dp"
        android:layout_marginTop="190dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_map" />

    <ImageView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="70dp"
        android:layout_marginTop="90dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_quote" />

    <ImageView
        android:id="@+id/wikipedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:layout_marginTop="290dp"
        android:alpha="0"
        android:src="@mipmap/onboarding_1_atom_wikipedia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            style="@style/guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Comprehensive" />

        <TextView
            android:id="@+id/descptTitle1"
            style="@style/guide_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="We collect the best pieces from around " />

        <TextView
            android:id="@+id/descptTitle2"
            style="@style/guide_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="the web and combine them into a story." />

    </LinearLayout>

</FrameLayout>